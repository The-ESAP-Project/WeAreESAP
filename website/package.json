  "scripts": {
    "dev": "pnpm run prebuild && next dev",
    "prebuild": "node ./scripts/generate-blur-placeholders.mjs && node ./scripts/generate-build-info.mjs",
    "build": "next build",
    "postbuild": "next-sitemap --config ./scripts/next-sitemap.config.js",
    "start": "next start",
    "analyze": "pnpm build --webpack",
    "test": "pnpm run build && vitest run && playwright test",
    "test:unit": "pnpm prebuild build && vitest",
    "test:unit:run": "pnpm prebuild prebuild && vitest run",
    "test:unit:ui": "pnpm run prebuild && vitest --ui",
    "test:unit:coverage": "pnpm run prebuild && vitest run --coverage",
    "test:e2e": "pnpm run build && playwright test",
    "test:e2e:ui": "pnpm run build && playwright test --ui",
    "test:e2e:debug": "pnpm run build && playwright test --debug",
    "lint": "pnpm run prebuild && eslint",
    "lint:fix": "pnpm run prebuild && eslint --fix",
    "format": "pnpm run prebuild && prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "license:add": "node ./scripts/add-license-headers.js",
    "blur:generate": "node ./scripts/generate-blur-placeholders.mjs",
    "sitemap:generate": "next-sitemap --config ./scripts/next-sitemap.config.js"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "elkjs": "^0.11.0",
    "framer-motion": "^12.23.24",
    "next": "16.0.1",
    "next-intl": "^4.5.0",
    "next-themes": "^0.4.6",
    "pangu": "^7.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "reactflow": "^11.11.4",
    "styled-jsx": "^5.1.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.1.0",
    "next-sitemap": "^4.2.3",
    "plaiceholder": "^3.0.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
